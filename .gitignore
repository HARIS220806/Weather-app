#include <stdio.h>
#include <string.h>

struct Weather {
    char city[50];
    float temperature;
    char condition[50];
};


void displayWeather(struct Weather w) {
    printf("\nWeather Report for %s:\n", w.city);
    printf("Temperature: %.2fÂ°C\n", w.temperature);
    printf("Condition: %s\n", w.condition);
}


int main() {
    struct Weather weatherData[5] = {
        {"New York", 22.5, "Sunny"},
        {"London", 15.0, "Cloudy"},
        {"Paris", 18.2, "Rainy"},
        {"Tokyo", 25.6, "Clear"},
        {"Mumbai", 30.3, "Humid"}
    };

    char city[50];
    int found = 0;

    printf("Enter the city name: ");
    scanf("%s", city);

    
    for (int i = 0; i < 5; i++) {
        if (strcmp(weatherData[i].city, city) == 0) {
            displayWeather(weatherData[i]);
            found = 1;
            break;
        }
    }

    if (!found) {
        printf("Weather data for %s not found.\n", city);
    }

    return 0;
}